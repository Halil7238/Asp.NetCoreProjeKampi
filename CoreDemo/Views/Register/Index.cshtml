@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}



<!--/main-->
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle"> Yazar Kayıt Sayfası</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form method="post">
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Ad Soyad</label>

                            <input type="text" class="form-control" name="WriterName" id="validationDefault01" placeholder="" required="">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">Mail</label>
                            <input type="text" class="form-control" name="WriterMail" id="validationDefault02" placeholder="" required="">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Şifre</label>
                            <input type="password" class="form-control" name="WriterPassword" placeholder="" required="">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Şifre Tekrarı</label>
                            <input type="password" class="form-control" name="ConfirmPassword" placeholder="" required="">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label   mb-2">Şehir Seç</label>
                            <select type="dropdown" name="WriterCity"  class="form-control">
                                <option >Şehrini Seç</option>
                                <option value="0">İstanbul</option>
                                <option value="1">Ankara</option>
                                <option value="2">Batman</option>
                            </select>
                            
                            
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Görsel Dosya Yolu</label>
                            <input type="text" class="form-control" name="WriterImage" placeholder="" required="">
                        </div>

                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4"  >Kayıt Ol</button>
                   
                </form>

            </div>
        </div>
    </div>
</section>
<!--//main-->
